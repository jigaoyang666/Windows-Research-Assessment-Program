<Window x:Class="RAP.View.supervision"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAP.View"
        mc:Ignorable="d"
        Title="supervision" Height="450" Width="300">
    <Viewbox>
    <Grid x:Name="Supervision">
            <Viewbox>
                <DataGrid x:Name="Tablesuper" ItemsSource="{Binding}" AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Visible" 
                              ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" 
                              IsReadOnly="True" HorizontalAlignment="Left" Height="410" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="35" Binding="{Binding ID}" MinWidth="80"/>
                <DataGridTextColumn Header="Name" Width="200" Binding="{Binding Name}"/>

            </DataGrid.Columns>
        </DataGrid>
    </Viewbox>
    </Grid>
    </Viewbox>
</Window>
